<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POL.MainPage">

    
    <Grid>

        <BoxView x:Name="bdGradient" Scale="4" AnchorX="1" AnchorY="0">
            
            <BoxView.Background>
                    
                <LinearGradientBrush>
                    
                    <GradientStop Color="Turquoise" Offset="0.1"></GradientStop>
                    <GradientStop Color="DarkTurquoise  " Offset="0.3"></GradientStop>
                    <GradientStop Color="LightBlue" Offset="0.6"></GradientStop>
                    <GradientStop Color="DeepSkyBlue" Offset="0.75"></GradientStop>
                    <GradientStop Color="Blue	" Offset="1.0"></GradientStop>
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <Image Source="Air.png" VerticalOptions="Center" HorizontalOptions="Center"></Image>
    </Grid>
</ContentPage>
